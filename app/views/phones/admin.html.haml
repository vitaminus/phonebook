.search-block
  = render 'search'
#new-phone
.offset2
  .block
    .offset1
      %h2 Administration page
    .span7
      - if @phones.length == 0
        %h4 Phones not found by this name
      -else
        %table.table
          %thead
            %tr
              %th Name
              %th Phone
              %th 
          - @phones.each do |phone|
            %tr
              %td= phone.name
              %td= phone.phone
              %td
                = link_to "Edit", edit_phone_path(phone), remote: true
                = link_to "Delete", phone, confirm: "Are you sure?",method: :delete, remote: true
        = will_paginate @phones, inner_window: 2, outer_window: 2, renderer: BootstrapPagination::Rails
      #upload
        %hr
        #upload-link
          To add data from file click this link:
          %br ( format: doc, txt; each string like: Egor Vodenov (456) 456-45-45 )
          %h4= link_to "Upload the file with phone base", upload_path, id: "upload-link", remote: true